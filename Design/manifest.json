{
  	"manifest_version": 2,
  	"name": "Vinno (Video Annotation Tool)",
    "description": "instrument Web pentru adnotarea con≈£inuturilor video redate utilizatorului",
	"version": "0.1",
	"permissions": [ "activeTab" ,"storage" ],
  "display": "standalone",
  "orientation": "landscape",
	"content_scripts": [
  		{
    		"matches": [
      			"<all_urls>"
    		],
    		"js": ["content.js"]
  		}
	],

	"icons": {
		      "16": "Itachi.png",
        	"48": "Itachi.png",
        	"128": "Itachi.png",
          "256": "Itachi.png"
    	},



	"background": {
  		"scripts": [
    		"background.js"
  		]
	},

  	"browser_action": {
    	"default_title": "Vinno",
      "default_locale": "en",
   		"default_popup": "popup.html",
      "chrome": { "navigation": true }
  	}

}
